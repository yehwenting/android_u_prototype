<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardBackgroundColor="@color/colorPrimaryGray"
            >

            <RelativeLayout
                android:layout_width="350dp"
                android:layout_height="250dp">
                <!--android:background="@drawable/background_group"-->

                <TextView
                    android:id="@+id/cga_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="17dp"
                    android:letterSpacing="0.1"
                    android:text="WO20170000013420"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/cga_name"
                    android:layout_marginStart="30dp"
                    android:layout_toEndOf="@+id/textView9"
                    android:src="@drawable/ic_brightness_1_black_24dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView2"
                    android:layout_alignEnd="@+id/textView8"
                    android:text="待回報"
                    android:textColor="@color/statusOrange"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/cga_name"
                    android:layout_below="@+id/cga_name"
                    android:layout_marginTop="28dp"
                    android:text="基準日\n 8/10"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/textView6"
                    android:layout_margin="15dp"
                    android:background="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView6"
                    android:layout_marginEnd="13dp"
                    android:layout_toStartOf="@+id/imageView2"
                    android:text="預計執行日\n 8/20" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView7"
                    android:layout_marginStart="25dp"
                    android:layout_toEndOf="@+id/textView7"
                    android:text="工單執行期限\n 9/01" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView6"
                    android:layout_below="@+id/view2"
                    android:text="保養回報工程師 : Y_TILSMJ" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/view2"
                    android:layout_below="@+id/textView9"
                    android:layout_marginTop="13dp"
                    android:text="預防保養說明 :" />


                <!--android:textColor="#FFB800" -->


            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>



</LinearLayout>